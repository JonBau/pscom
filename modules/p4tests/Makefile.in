#							-*- Makefile -*-
SRCDIR := @srcdir@
TOP_SRCDIR := @TOP_SRCDIR@


ifeq ($(KNAME),)
all:
	$(MAKE) -C .. p4tests
clean:
	$(MAKE) -C .. p4tests_clean
else

# Module p4tests.o

MODULE = p4tests.o

CPPFLAGS += -I$(TOP_SRCDIR)/include -I$(SRCDIR)/../p4sock
VPATH += $(SRCDIR)

include $(SRCDIR)/../Makefile.linuxmod.include

module: _do_test_

_do_test_:	p4tests
	./p4tests && touch $@

endif
