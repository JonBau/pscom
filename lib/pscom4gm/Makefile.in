# Use absolute paths !!!
SRCDIR := $(shell cd @srcdir@;pwd)
TOPSRCDIR := @TOP_SRCDIR@
TOP_BUILDDIR:=@TOP_BUILDDIR@
GM_ENABLED:=@GM_ENABLED@
GM_HOME:=@GM_HOME@
################################

export LIBNAME := pscom4gm
export LIBOBJS := pscom_gm.o psgm.o
export LIBVPATH := $(SRCDIR)
export LIBINC = -I$(TOPSRCDIR)/include -I$(GM_HOME)/include -I$(SRCDIR)/../pscom
export LIBEXTERNAL_SHARED = -Wl,-rpath,${GM_HOME}/lib -Wl,--enable-new-dtags -L$(GM_HOME)/lib -lgm
# export LIBDEF := -DENABLE_GM
export LIBDSTDIR = ../..

################################

all lib: sharedlib

sharedlib: sharedlib.dir
	$(MAKE) -C $@.dir -f ../../Makefile.$@

sharedlib.dir:
	mkdir -p $@

clean:
	$(MAKE) -C sharedlib.dir -f ../../Makefile.sharedlib clean || echo nevermind

distclean:
	$(MAKE) -C sharedlib.dir -f ../../Makefile.sharedlib distclean || echo nevermind
	$(RM) -r sharedlib.dir
	$(RM) Makefile

Makefile: $(SRCDIR)/Makefile.in
	cd $(TOP_BUILDDIR); ./config.status
